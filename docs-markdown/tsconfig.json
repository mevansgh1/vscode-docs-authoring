{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "lib": [
            "es6",
            "es2017"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "./node_modules/vscode/vscode.d.ts",
        "./node_modules/vscode/lib/*"
    ],
    "exclude": [
        ".vscode-test"
    ]
}